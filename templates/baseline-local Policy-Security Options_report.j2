<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: 'Segoe UI', Tahoma, sans-serif; margin: 0; background-color: #fff; color: #000; }
        .container { width: 98%; margin: 10px auto; border: 1px solid #ccc; padding: 10px; }
        h1 { font-size: 14px; font-weight: normal; border-bottom: 1px solid #ddd; padding-bottom: 5px; }
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; padding: 6px 10px; font-size: 12px; background-color: #f9f9f9; border: 1px solid #ddd; }
        td { padding: 4px 10px; border: 1px solid #eee; font-size: 11px; }
        .not-defined { color: #888; font-style: italic; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Local Policies > Security Options</h1>
        <table>
            <thead>
                <tr>
                    <th style="width: 70%;">Policy</th>
                    <th style="width: 30%;">Security Setting</th>
                </tr>
            </thead>
            <tbody>
                {% set scan_results = {} %}
                {% for line in security_scan_raw.stdout_lines %}
                    {% set parts = line.split('|') %}
                    {% if parts | length > 1 %}
                        {% set key = parts[0] %}
                        {% set val = parts[1] | default('') | replace('"', '') %}
                        {% set clean_val = val.split(',')[-1] %}
                        {% if clean_val == "1" %}{% set d_val = "Enabled" %}
                        {% elif clean_val == "0" %}{% set d_val = "Disabled" %}
                        {% else %}{% set d_val = clean_val %}{% endif %}
                        {% set _ = scan_results.update({key: d_val}) %}
                    {% endif %}
                {% endfor %}

                {% for key, friendly in security_options_map.items() | sort(attribute=1) %}
                <tr>
                    <td>{{ friendly }}</td>
                    <td class="{{ 'not-defined' if not scan_results[key] else '' }}">
                        {{ scan_results[key] | default("Not Defined") }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>
