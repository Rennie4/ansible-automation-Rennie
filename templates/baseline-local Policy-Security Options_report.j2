<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Windows Server 2025 Security Audit</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, sans-serif; margin: 0; background-color: #ffffff; color: #333; }
        .container { width: 98%; margin: 10px auto; padding: 10px; }
        .header-box { border-bottom: 1px solid #ddd; padding-bottom: 5px; margin-bottom: 15px; }
        h1 { font-size: 18px; font-weight: normal; color: #000; }
        .section-header { background-color: #f4f4f4; padding: 6px 12px; font-size: 13px; font-weight: bold; border: 1px solid #ddd; border-bottom: none; }
        table { width: 100%; border-collapse: collapse; border: 1px solid #ddd; }
        th { background-color: #fff; color: #333; padding: 8px 12px; text-align: left; font-size: 13px; font-weight: normal; border-bottom: 1px solid #ddd; }
        td { padding: 6px 12px; border-bottom: 1px solid #f2f2f2; font-size: 12px; border-right: 1px solid #f2f2f2; }
        .not-defined { color: #888; font-style: italic; }
        tr:hover { background-color: #fcfcfc; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-box">
            <h1>Local Computer Policy > Computer Configuration > Windows Settings > Security Settings > Local Policies > Security Options</h1>
        </div>

        <div class="section-header">Security Options</div>

        <table>
            <thead>
                <tr>
                    <th style="width: 70%;">Policy</th>
                    <th style="width: 30%;">Security Setting</th>
                </tr>
            </thead>
            <tbody>
                {% set results = [] %}
                {# Create a set of found keys to identify what is missing #}
                {% set found_keys = [] %}

                {% for line in security_scan_raw.stdout_lines %}
                    {% set parts = line.split('|') %}
                    {% if parts | length > 1 %}
                        {% set key = parts[0] %}
                        {% set val = parts[1] | default('') %}
                        {% set friendly = security_options_map[key] | default(key) %}
                        {% set _ = found_keys.append(key) %}
                        
                        {% set clean_val = val.split(',')[-1] | replace('"', '') %}
                        {% if clean_val == "1" %}{% set display_val = "Enabled" %}
                        {% elif clean_val == "0" %}{% set display_val = "Disabled" %}
                        {% elif clean_val == "" %}{% set display_val = "Not Defined" %}
                        {% else %}{% set display_val = clean_val %}{% endif %}
                        
                        {% set _ = results.append({'name': friendly, 'value': display_val}) %}
                    {% endif %}
                {% endfor %}

                {# Add items that were in our map but NOT found in the secedit export as "Not Defined" #}
                {% for key, name in security_options_map.items() %}
                    {% if key not in found_keys %}
                        {% set _ = results.append({'name': name, 'value': "Not Defined"}) %}
                    {% endif %}
                {% endfor %}

                {% for item in results | sort(attribute='name') | unique(attribute='name') %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td class="{{ 'not-defined' if item.value == 'Not Defined' else '' }}">
                        {{ item.value }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>
